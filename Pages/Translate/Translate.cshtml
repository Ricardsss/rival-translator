@page "/Translate"
@model TranslateModel
@{
  ViewData["Title"] = "Translate";
}

<h1>Translate</h1>

<form method="post">
  <label for="selectedSourceLanguage">Source language:</label>
  <select id="selectedSourceLanguage" name="selectedSourceLanguage">
    @foreach (var key in Model.ViewModel.LanguageMap.Keys)
    {
      if (key == Model.ViewModel.State.SelectedSourceLanguage)
      {
        <option value="@key" selected>@key</option>
      }
      else
      {
        <option value="@key">@key</option>
      }
    }
  </select>

  <label for="target-languages">Target language:</label>
  <select id="target-languages" name="selectedTargetLanguage">
    @foreach (var key in Model.ViewModel.LanguageMap.Keys)
    {
      if (key == Model.ViewModel.State.SelectedTargetLanguage)
      {
        <option value="@key" selected>@key</option>
      }
      else
      {
        <option value="@key">@key</option>
      }
    }
  </select>

  <label for="text">Original Text:</label>
  <textarea type="text" id="text" name="text" required>@Model.ViewModel.State.InputText</textarea>

  <button type="submit">Translate</button>
</form>



@if (!string.IsNullOrEmpty(Model.ViewModel.State.TranslatedText))
{
  <p><strong>Translated Text:</strong> @Model.ViewModel.State.TranslatedText</p>
}